
@{
    ViewBag.Title = "Index";
}

<h2>Funkcja 1</h2>

<!-- Sekcja do generowania wykresu -->
<script>
	window.onload = function () {

	var chart = new CanvasJS.Chart("chartContainer", {
	theme: "light2", // "light1", "light2", "dark1", "dark2"
	animationEnabled: true,
	zoomEnabled: true,
	title: {
        text: "Math.Sin(5*i) + Math.Cos(3*i)"
	},
	data: [{
		type: "line",
		dataPoints: @Html.Raw(ViewBag.DataPoints) //Tutaj drukujemy dane z serjalizacji wykonanej w akcji index kontrolera CanvasjsController
	}]
});

chart.render();
}
</script>

<div id="chartContainer" style="height: 370px; width: 100%;"></div>

