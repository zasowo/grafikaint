@{
    ViewData["Title"] = "Mixed Chart";
}

<html>
<head>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>

    </style>
</head>
<body>
    <h1>Wykres kombinowany</h1>
    <div id="chartDiv">
        <canvas id="myChart"></canvas>
    </div>
    <script>
        const mixedChart = new Chart(document.getElementById('myChart'), {
            data: {
                datasets: [{
                    type: 'bar',
                    label: 'Bar Dataset',
                    data: [11, 22, 33, 44, 55]
                }, {
                    type: 'line',
                    label: 'Line Dataset',
                    data: [20, 70, -5, 30, 40],
                }],
                labels: ['January', 'February', 'March', 'April', 'May']
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

    </script>
</body>
